# Contoh file .env untuk konfigurasi frontend
# Salin file ini ke .env dan sesuaikan nilai-nilainya

# Judul aplikasi
VITE_APP_TITLE=Gema Hati Kudus

# URL API - Gunakan URL Railway untuk deployment Vercel/Netlify
VITE_API_BASE_URL=https://nodejs-production-0c33.up.railway.app
VITE_API_URL=https://nodejs-production-0c33.up.railway.app
VITE_API_TIMEOUT=15000

# URL Frontend - Ganti dengan URL deployment Anda
VITE_FRONTEND_URL=https://your-domain.com
FRONTEND_URL=https://your-domain.com

# Google OAuth
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=https://your-domain.com/oauth2callback

# Konfigurasi lainnya
VITE_SUPPORTED_LANGUAGES=id,en
VITE_REFRESH_TOKEN_EXPIRES_IN=604800
REFRESH_TOKEN_EXPIRES_IN=604800
VITE_MAX_UPLOAD_SIZE=5242880

# Feature flags
VITE_ENABLE_FEATURE_X=true
VITE_ENABLE_FEATURE_Y=true
